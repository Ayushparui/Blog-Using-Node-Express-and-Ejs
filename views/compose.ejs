<%- include("partials/header.ejs") %> 
<h1>Compose</h1>
<form action="/compose" method="post">

    <div class="form-group input-group-lg">
        <label for="title">Title</label>
        <input type="text" class="form-control" aria-label="Username" aria-describedby="basic-addon1" name="postTitle">
      </div>

      <div class="form-group">
        <label for="comment">Post:</label>
        <textarea class="form-control" rows="5" id="comment" name="postBody"></textarea>
      </div>

      <button type="submit" class="btn btn-primary" name="publishCompose">Publish</button>

</form>
